<% @images.in_groups_of(3) do |group| %>
    <div class="row">
      <% group.compact.each do |image| %>
          <div class="col-xs-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <%= image_tag image[:url], :width => '100%' %>
                <hr/>
              </div>
            </div>
          </div>
      <% end %>
    </div>
<% end %>